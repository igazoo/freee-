<div class="expense-show-wrapper">
  <div class="expense-show-container">
    <h6>
      <%= @expense.month %>月
    </h6>
      <div class="expense-show-main-area">
        <div class="expense-show-list">
          <% sum = 0 %>
          <ul>　
            <% @expenses.each do |expense| %>
              <% if expense.month == @expense.month %>
                <li>
                  <%= expense.month %>月
                  <%= expense.date %>日
                  <%= expense.category %>
                  <%= expense.money %>円
                  <%= link_to '[編集]', edit_expense_path(expense)%>
                  <%= link_to '[削除]',expense_path(expense),method: :delete,
                                    data: { confirm: '削除しますか?'} %>
                  <% sum += expense.money.to_i %>
                </li>
                <% end %>
              <% end %>
              </ul>
            </div>
          </div>
      <h6>合計: <%= sum %>円</h6>
  </div>
</div>
